<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Button Name="btnGetToken" Content="GetToken" Width="150" Height="30" Margin="10" HorizontalAlignment="Left"/>
            <Button Name="btnGetValue" Content="GetValue" Width="150" Height="30" Margin="10" HorizontalAlignment="Left"/>
            <TextBox Name="txbMsg" TextWrapping="Wrap" Text="Msg" Width="500" Height="200" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
